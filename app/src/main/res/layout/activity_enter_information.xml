<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:id="@+id/avatar"
            android:src="@drawable/icon">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/username"
            android:layout_height="match_parent"
            android:text="hanxinhgai"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintBottom_toTopOf="@id/tenthat"
            android:textColor="#000000"
            android:layout_marginStart="66dp"
            android:textSize="12sp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tenthat"
            android:layout_height="match_parent"
            android:text="Nguyễn Ngọc Lan"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toTopOf="@id/avatar"
            android:textColor="#000000"
            android:layout_marginStart="66dp"
            android:textSize="14sp">


        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/problemcount"
            android:layout_height="match_parent"
            android:text="15 bài"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#B7B7B7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tenthat"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/xephang"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:text="1"

            android:textColor="#000000"
            android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:textSize="30sp"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>